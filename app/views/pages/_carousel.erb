<div ng-controller="CarouselCtrl" ng-init="CarouselFind(<%= @carousel.id%>)">
  <div style="height: 370px">
    <carousel interval="myInterval">
      <slide ng-repeat="slide in slides" active="slide.active">
        <img ng-src="{{slide.photo.slider.url}}" style="margin:auto;">

        <div class="carousel-caption">
          <h2>{{slide.name}}</h2>
          <p>{{slide.body}}</p>
        </div>
      </slide>
    </carousel>
  </div>
</div>

